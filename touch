Tab:AddButton({
    Name = "Remove Traps",
    Callback = function()
        task.spawn(function()
            for _, folder in pairs(workspace:GetChildren()) do
                if folder:IsA("Folder") then
                    for _, obj in pairs(folder:GetDescendants()) do
                        if obj:IsA("Model") then
                            local name = obj.Name:lower()
                            if name == "spikes" or name == "fire trap" or name == "knife trap" then
                                obj:Destroy()
                            end
                        end
                    end
                end
            end
        end)

        OrionLib:MakeNotification({
            Name = "Trap Remover",
            Content = "All traps removed from workspace folders.",
            Image = "rbxassetid://4483345998",
            Time = 4
        })
    end
})
